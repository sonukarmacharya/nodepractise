<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <form action="/search/" method="POST">
      <label><h1>Filter Employee</h1></label><br>
      Name:<input type="text" name="fltrname">
      Email:<input type="text" name="fltremail">
      type:<input type="text" name="fltrtype"><br><br>
      <input type="submit" value="submit" name="submit">
    </form><br><br>
    <h1><%= title %></h1>
    <table>
      <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Emp type</th>
      <th>Hourly Rate</th>
      <th>Total hour</th>
      <th>Action</th>
      </tr>
     
        <%
        if(records.length>0){%>
          <% records.forEach(function(row){%>
        <tr>
          <td><%= row.name %></td>
          <td><%= row.email%></td>
          <td><%= row.etype%></td>
          <td><%= row.hourlyrate%></td>
          <td><%=  row.totalHour%></td>
          <td><a href="/edit/<%= row._id %>">edit</a>
            <a href="/delete/<%= row._id %>">delete</a></td>
                 </tr>
        <%})}
        else{
          %>
          <tr><td>No records found</td></tr>
          <%
        }%>
    </table><br><br><br>
    <form action="/" method="POST">
      <label><h1>Employee Form</h1></label><br>
      Name:<input type="text" name="name"><br><br>
      Email:<input type="text" name="email"><br><br>
      type:<input type="text" name="type"><br><br>
      hourlyrate:<input type="text" name="hrate"><br><br>
      totalHour:<input type="text" name="thour"><br><br>
      <input type="submit" value="submit" name="submit">
    </form>
  </body>
</html>
